{
    "version": "1.0.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "python": "${command:python.interpreterPath}",
            "program": "${file}",
            "args": [],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "NCUT_Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build_debug/perception/NCutSegmentation/NcutSegmentation",
            "args": [
                "/auto-driving-tec/data/ncut/bin"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build_debug",
            "externalConsole": false,
            "MIMode": "gdb"
        },
        {
            "name": "LaneDetect_Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build_debug/perception/lane_detect/LaneDetector",
            "args": [
                "/auto-driving-tec/data/lane_detect/project_video.mp4"
                //"/auto-driving-tec/data/lane_detect/frame_580.jpg"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build_debug",
            "externalConsole": false,
            "MIMode": "gdb"
        },
        {
            "name": "NDT_Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build_debug/localization/ndt/ndt_omp_mapping",
            "args": [
                "workspace_dir==\"/auto-driving-tec/data/ndt_mapping/pcd\"",
                "output_file==\"/auto-driving-tec/data/ndt_mapping/output.pcd\"",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build_debug",
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerArgs": "-q -ex quit; wait() { fg >/dev/null; }; /usr/bin/gdb -q --interpreter=mi",
        },
    ]
}